{
    "If statement": {
        "prefix": "if",
        "body": "IF (${1:condition}) THEN",
        "description": "IF conditional block"
    },
    "Do loop": {
        "prefix": "do",
        "body": "DO ${1:i} = ${2:start}, ${3:end}, ${4:step}",
        "description": "DO loop"
    },
    "End if": {
        "prefix": "endif",
        "body": "END IF",
        "description": "Close IF block"
    },
    "End do": {
        "prefix": "enddo",
        "body": "END DO",
        "description": "Close DO loop"
    },
    "Program": {
        "prefix": "program",
        "body": "PROGRAM ${1:name}\n\nIMPLICIT NONE\n\n${2:! code}\n\nEND PROGRAM ${1:name}",
        "description": "Program structure"
    },
    "Subroutine": {
        "prefix": "subroutine",
        "body": "SUBROUTINE ${1:name}(${2:args})\nIMPLICIT NONE\n${3:! declarations}\n\n${4:! code}\n\nEND SUBROUTINE ${1:name}",
        "description": "Subroutine definition"
    },
    "Function": {
        "prefix": "function",
        "body": "FUNCTION ${1:name}(${2:args}) RESULT(${3:res})\nIMPLICIT NONE\n${4:! declarations}\n\n${5:! code}\n\nEND FUNCTION ${1:name}",
        "description": "Function definition"
    },
    "Implicit none": {
        "prefix": "implicit",
        "body": "IMPLICIT NONE",
        "description": "Disable implicit typing"
    },
    "Integer declaration": {
        "prefix": "integer",
        "body": "INTEGER :: ${1:var}",
        "description": "Integer variable declaration"
    },
    "Real declaration": {
        "prefix": "real",
        "body": "REAL :: ${1:var}",
        "description": "Real variable declaration"
    },
   "Print": {
        "prefix": "print",
        "body": "PRINT *, \"${1:text}\"",
        "description": "Print statement"
    },
    "Read": {
        "prefix": "read",
        "body": "READ(*,*) ${1:vars}",
        "description": "Read statement"
    },
    "Write": {
        "prefix": "write",
        "body": "WRITE(*,*) ${1:vars}",
        "description": "Write statement"
    },
    "Call": {
        "prefix": "call",
        "body": "CALL ${1:subroutine}(${2:args})",
        "description": "Call a subroutine"
    },
    "Allocate": {
        "prefix": "allocate",
        "body": "ALLOCATE(${1:array}(${2:dims}))",
        "description": "Allocate array"
    },
    "Deallocate": {
        "prefix": "deallocate",
        "body": "DEALLOCATE(${1:array})",
        "description": "Deallocate array"
    }
}